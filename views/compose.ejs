

<%- include("partials/header"); -%> 

  <h1 id="create-blog">Create Blog</h1>
  <form id="compose" action="/publish" method="post">
    <div class="form-group">
      <label>Title</label>
      <input id="title" class="form-control" type="text" name="postTitle">
      <label style="margin-top: 5px;">Post</label>
      <textarea id="post" class="form-control" name="postBody" rows="5" cols="30"></textarea>
    </div>
    <button class="btn btn-primary" type="submit" name="button">Publish</button>
  </form>

